<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8803A9F4"
    tools:context=".UpdateItem">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/updateToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/updateItemsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Update Item"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateToolbar"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/updateItemType"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Item Type"
        android:inputType="text"
        android:textColorHint="#5D4037"
        app:layout_constraintBottom_toTopOf="@+id/updateItemModel"
        app:layout_constraintEnd_toStartOf="@+id/updateItemMake"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/updateItemMake"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Item Make"
        android:inputType="text"
        android:textColorHint="#5D4037"
        app:layout_constraintBottom_toBottomOf="@+id/updateItemType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/updateItemType"
        app:layout_constraintTop_toTopOf="@+id/updateItemType"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/updateItemModel"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Item Model"
        android:inputType="text"
        android:textColorHint="#5D4037"
        app:layout_constraintBottom_toTopOf="@+id/updateItemDepartment"
        app:layout_constraintEnd_toStartOf="@+id/updateItemLocation"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/updateItemLocation"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Item Location"
        android:inputType="text"
        android:textColorHint="#5D4037"
        app:layout_constraintBottom_toBottomOf="@+id/updateItemModel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/updateItemModel"
        app:layout_constraintTop_toTopOf="@+id/updateItemModel"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/updateItemDepartment"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="40dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Item Department"
        android:inputType="text"
        android:textColorHint="#5D4037"
        app:layout_constraintBottom_toTopOf="@+id/updateButton"
        app:layout_constraintEnd_toStartOf="@+id/updateItemUser"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/updateItemUser"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="User"
        android:textColorHint="#5D4037"
        app:layout_constraintBottom_toBottomOf="@+id/updateItemDepartment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/updateItemDepartment"
        app:layout_constraintTop_toTopOf="@+id/updateItemDepartment"
        tools:ignore="HardcodedText"
        android:autofillHints="" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="122dp"
        android:layout_height="70dp"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="192dp"
        android:text="Update"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="122dp"
        android:layout_height="70dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="112dp"
        android:text="Delete"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateButton"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>